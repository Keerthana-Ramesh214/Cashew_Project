@model ShoppingApp.Models.UserRegistration

@{
    ViewData["Title"] = "Login";
}
@*
    <h1>Login</h1>*@


<style>
    @*.bg-image-vertical {
        position: relative;
        overflow: hidden;
        background-repeat: no-repeat;
        background-position: right center;
        background-size: auto 100%;
    }*@
</style>


<body>
    
<section >
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQuNz7JwDPKRbsE_vHzndGc0mZweS_BO7S5rMhuNfFTwHapmHuTndVibk7dfosHa_AAVo0&usqp=CAU" style="width: 75px; height: 75px" /><h1>LOGIN</h1>

                </div>
                <br />
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form asp-action="Login" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;"></h3>

                        <div class="form-outline mb-4">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>

                    <div class="form-outline mb-4">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                    </div>

                    <div class="pt-1 mb-4">
                        <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                    </div>

                    <p class="small mb-5 pb-lg-2"><a class="text-muted" asp-action="ForgotPassword" asp-controller="UserRegister">Forgot password?</a></p>
                    <p>Don't have an account? <a asp-action="AddUser" class="link-info">Register here</a></p>

                </form>

            </div>

        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
            <img src="https://static5.depositphotos.com/1020804/405/i/450/depositphotos_4059470-stock-photo-ripe-cashew-nuts-with-leaves.jpg"
                 alt="Login image" class="w-100 ml-md-2" style="object-fit: cover; object-position: left;">
        </div>
    </div>
</div>
</section>
</body>




